<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getAllUsersController</servlet-name>
        <servlet-class>mate.controller.DisplayDriversController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createDriverController</servlet-name>
        <servlet-class>mate.controller.CreateDriverController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createCarController</servlet-name>
        <servlet-class>mate.controller.CreateCarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createNewManufacturerController</servlet-name>
        <servlet-class>mate.controller.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addDriverToCarController</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllUsersController</servlet-name>
        <url-pattern>/driver/all</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createDriverController</servlet-name>
        <url-pattern>/driver/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addDriverToCarController</servlet-name>
        <url-pattern>/car/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createCarController</servlet-name>
        <url-pattern>/car/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createNewManufacturerController</servlet-name>
        <url-pattern>/manufacturer/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
</web-app>
